{% extends 'common/layout.twig' %}
{% block content %}
    <div>
        <h4>Existing Etsy Api Keys</h4>
        {% for apikey in all_etsy_api_keys %}
            <p><label>account name:</label> {{ apikey.account_name }} <label>app name:</label> {{ apikey.app_name }}</p>
        {% endfor %}
    </div>
    <h4>New Etsy Api Key</h4>
    {% if msg %}
        <div class="alert-info">{{ msg }}</div>
    {% endif %}
    {% if error %}
        <div class="alert-danger">{{ error }}</div>
    {% endif %}
    <form action="" method="post">
        <div class="form-group">
            <label for="account_name">account name</label>
            <input type="text" class="form-control" id="account_name" name="account_name" value="{{ form.account_name }}" required>
        </div>
        <div class="form-group">
            <label for="app_name">App name</label>
            <input type="text" class="form-control" id="app_name" name="app_name" value="{{ form.app_name }}" required>
        </div>
        <div class="form-group">
            <label for="key_string">Key string</label>
            <input type="text" class="form-control" id="key_string" name="key_string" value="{{ form.key_string }}" required>
        </div>
        <div class="form-group">
            <label for="shared_secret">Shared secret</label>
            <input type="text" class="form-control" id="shared_secret" name="shared_secret" value="{{ form.shared_secret }}" required>
        </div>
        <div class="form-group">
            <label for="oauth_token">Oauth token</label>
            <input type="text" class="form-control" id="oauth_token" name="oauth_token" value="{{ form.oauth_token }}">
        </div>
        <div class="form-group">
            <label for="oauth_token_secret">Oauth token secret</label>
            <input type="text" class="form-control" id="oauth_token_secret" name="oauth_token_secret" value="{{ form.oauth_token_secret }}">
        </div>
        <div class="form-group">
            <button type="submit" name="submit">Submit</button>
        </div>
    </form>
{% endblock content %}