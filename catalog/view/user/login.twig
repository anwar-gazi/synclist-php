{% extends "common/layout.twig" %}
{% block page_title %}
    <title>Login</title>
{% endblock %}
{% block includes %}
    <link href='{{ root_url() }}assets/bootstrap/css/bootstrap.min.css' rel="stylesheet">
    <link href='{{ root_url() }}assets/css/style.css' rel="stylesheet">
    <link href="{{ root_url() }}assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
{% endblock %}
{% block layoutjs %}
{% endblock %}
{% block header %}
{% endblock %}
{% block belly %}
    <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ msg }}</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="{{ url('user/login') }}" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="username" name="username" type="text" value="" required autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="" required autofill="off">
                            </div>
                            <button type="submit" name="login_submit" class="btn btn-lg btn-success btn-block">Login</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
        </div>
    </div>
{% endblock %}
